<Window x:Class="RxQueryOperators.SmoothingWithWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RxQueryOperators"
        mc:Ignorable="d"
        Title="SmoothingWithWindow" Height="450" Width="800">
    <Canvas
        x:Name="background"
        Background="White">
        <Polyline
            x:Name="line"
            Stroke="Black"
            StrokeThickness="2"
            />
    </Canvas>
</Window>
